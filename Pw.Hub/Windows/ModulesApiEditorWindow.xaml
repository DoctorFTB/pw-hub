<Window x:Class="Pw.Hub.Windows.ModulesApiEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="Редактор модуля (API)" Height="640" Width="900" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header fields -->
        <Grid Grid.Row="0" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="180"/>
            </Grid.ColumnDefinitions>
            <TextBlock VerticalAlignment="Center" Text="Имя:"/>
            <TextBox x:Name="NameText" Grid.Column="1" Margin="8,0,0,0"/>
            <TextBlock Grid.Column="3" VerticalAlignment="Center" Text="Версия:"/>
            <TextBox x:Name="VersionText" Grid.Column="4" Margin="8,0,0,0"/>
        </Grid>

        <!-- Markdown editor with preview -->
        <GroupBox Grid.Row="1" Header="Описание (Markdown)">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="0,0,0,6">
                    <CheckBox x:Name="ShowPreviewCheck" Content="Показывать превью" IsChecked="True" Margin="0,0,12,0" Checked="ShowPreviewCheck_OnChanged" Unchecked="ShowPreviewCheck_OnChanged"/>
                    <Separator Width="8"/>
                    <TextBlock VerticalAlignment="Center" Text="Форматирование:" Margin="0,0,6,0"/>
                    <Button Content="B" Width="28" Margin="0,0,4,0" ToolTip="Жирный" Click="Bold_Click"/>
                    <Button Content="I" Width="28" Margin="0,0,4,0" ToolTip="Курсив" Click="Italic_Click"/>
                    <Button Content="#" Width="28" Margin="0,0,4,0" ToolTip="Заголовок" Click="Header_Click"/>
                    <Button Content="•" Width="28" Margin="0,0,4,0" ToolTip="Список" Click="List_Click"/>
                    <Button Content="{}" Width="36" Margin="0,0,4,0" ToolTip="Код" Click="Code_Click"/>
                </StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBox x:Name="DescriptionEditor" AcceptsReturn="True" AcceptsTab="True" TextWrapping="Wrap" FontFamily="Consolas" MinHeight="120" TextChanged="DescriptionEditor_OnTextChanged"/>
                        </ScrollViewer>
                    </Border>

                    <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" ResizeBehavior="PreviousAndNext" Background="#EEE"/>

                    <Border Grid.Column="2" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" x:Name="PreviewContainer">
                        <wv2:WebView2 x:Name="PreviewWebView"/>
                    </Border>
                </Grid>
            </DockPanel>
        </GroupBox>

        <!-- Script editor -->
        <Grid Grid.Row="2" Margin="0,8,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock VerticalAlignment="Top" Text="Скрипт:"/>
            <TextBox x:Name="ScriptText" Grid.Column="1" Margin="8,0,0,0" Height="120" AcceptsReturn="True" TextWrapping="NoWrap" FontFamily="Consolas"/>
        </Grid>

        <!-- Inputs -->
        <GroupBox Grid.Row="3" Header="Входные параметры">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" HorizontalAlignment="Right" Margin="0,0,0,6">
                    <Button x:Name="AddInputButton" Content="Добавить" Width="110" Margin="0,0,6,0" Click="AddInput_Click"/>
                    <Button x:Name="RemoveInputButton" Content="Удалить" Width="110" Click="RemoveInput_Click"/>
                </StackPanel>
                <DataGrid x:Name="InputsGrid" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Label" Binding="{Binding Label}" Width="*"/>
                        <DataGridComboBoxColumn Header="Type" SelectedItemBinding="{Binding Type}" Width="120">
                            <DataGridComboBoxColumn.ItemsSource>
                                <x:Array Type="{x:Type sys:String}">
                                    <sys:String>string</sys:String>
                                    <sys:String>number</sys:String>
                                    <sys:String>bool</sys:String>
                                </x:Array>
                            </DataGridComboBoxColumn.ItemsSource>
                        </DataGridComboBoxColumn>
                        <DataGridTextColumn Header="Default" Binding="{Binding Default}" Width="*"/>
                        <DataGridCheckBoxColumn Header="Required" Binding="{Binding Required}" Width="90"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </GroupBox>

        <!-- Actions -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" Width="100" Margin="0,0,8,0" IsCancel="True"/>
            <Button Content="Сохранить" Width="120" IsDefault="True" Click="OnSaveClick"/>
        </StackPanel>
    </Grid>
</Window>