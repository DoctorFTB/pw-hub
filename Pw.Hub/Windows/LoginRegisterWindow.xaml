<Window x:Class="Pw.Hub.Windows.LoginRegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в PW Modules" Height="260" Width="420" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Подключение к библиотеке модулей" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <TextBlock Text="Имя пользователя"/>
            <TextBox x:Name="UsernameText" Margin="0,2,0,8"/>
            <TextBlock Text="Пароль"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,2,0,8"/>
            <CheckBox x:Name="RememberCheck" Content="Запомнить меня" IsChecked="True" Margin="0,0,0,4"/>
            <CheckBox x:Name="DeveloperCheck" Content="Я разработчик (публикация модулей)"/>
            <TextBlock x:Name="ErrorText" Foreground="Red" Visibility="Collapsed" Margin="0,8,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" Width="100" Margin="0,0,8,0" IsCancel="True" Click="CancelClick"/>
            <Button Content="Регистрация" Width="120" Margin="0,0,8,0" Click="RegisterClick"/>
            <Button Content="Войти" Width="100" IsDefault="True" Click="LoginClick"/>
        </StackPanel>
    </Grid>
</Window>
