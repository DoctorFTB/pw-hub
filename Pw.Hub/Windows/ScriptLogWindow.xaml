<Window x:Class="Pw.Hub.Windows.ScriptLogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выполнение модуля" Height="520" Width="760" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock x:Name="TitleText" Text="Логи выполнения" FontWeight="Bold" VerticalAlignment="Center"/>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4">
            <ScrollViewer x:Name="Scroll" VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="LogTextBox" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap" BorderThickness="0"/>
            </ScrollViewer>
        </Border>

        <DockPanel Grid.Row="2" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                <ProgressBar x:Name="Progress" Width="420" Height="18" Minimum="0" Maximum="100"/>
                <TextBlock x:Name="PercentText" Margin="8,0,0,0" VerticalAlignment="Center" Text="0%"/>
                <TextBlock x:Name="StatusText" Margin="12,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                <Button x:Name="StopButton" Width="120" Margin="0,0,8,0" Click="StopButton_OnClick">Остановить</Button>
                <Button x:Name="CloseButton" Width="120" IsDefault="True" Click="CloseButton_OnClick">Закрыть</Button>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>